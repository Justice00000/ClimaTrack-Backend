# ============================================================================
# CORS (Cross-Origin Resource Sharing)
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5000

# ============================================================================
# WEATHER API INTEGRATION
# ============================================================================
# OpenWeatherMap API - Get free API key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=76c7dd1ba27bdf0a0e6269ffa841f7fe

# ============================================================================
# SATELLITE DATA INTEGRATION
# ============================================================================
# Sentinel Hub - Register at: https://www.sentinel-hub.com/
SENTINEL_HUB_CLIENT_ID=37f11c52-26e6-4878-a0cb-3855ff8048f2
SENTINEL_HUB_CLIENT_SECRET=lUbbnptX2QAAtZtMQPwy8MRPj7O5ub1T
SENTINEL_HUB_INSTANCE_ID=983b1335-448f-4d51-aeae-388b333e5665

# NASA Earthdata (Optional)
NASA_EARTHDATA_USERNAME=your_username
NASA_EARTHDATA_PASSWORD=your_password

# ============================================================================
# MACHINE LEARNING MODEL
# ============================================================================
ML_MODEL_PATH=./models/risk_prediction_model.h5
MODEL_CONFIDENCE_THRESHOLD=0.75
MODEL_VERSION=1.0.0

# ============================================================================
# EMAIL CONFIGURATION (For Alerts)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@climatrack.ng
SMTP_FROM_NAME=ClimaTrack Alerts

# ============================================================================
# SMS CONFIGURATION (For Alerts)
# ============================================================================
# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Africa's Talking (Alternative for Nigerian SMS)
AFRICASTALKING_USERNAME=your_username
AFRICASTALKING_API_KEY=your_api_key
AFRICASTALKING_SENDER_ID=ClimaTrack

# ============================================================================
# LOGGING & MONITORING
# ============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE_PATH=logs/climatrack.log

# Sentry (Error Tracking) - Get DSN from: https://sentry.io/
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# ============================================================================
# CLOUD STORAGE (Optional - for image uploads)
# ============================================================================
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=climatrack-uploads

# Google Cloud Storage (Alternative)
GCS_PROJECT_ID=your_project_id
GCS_BUCKET_NAME=climatrack-uploads
GCS_CREDENTIALS_PATH=./credentials/gcs-key.json

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# BACKGROUND TASKS (Celery)
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================================================
# GEOSPATIAL PROCESSING
# ============================================================================
GDAL_DATA=/usr/share/gdal
PROJ_LIB=/usr/share/proj

# ============================================================================
# API KEYS FOR EXTERNAL SERVICES
# ============================================================================
# Google Maps API (Optional)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Mapbox API (Optional)
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token

# ============================================================================
# ANALYTICS & TRACKING (Optional)
# ============================================================================
GOOGLE_ANALYTICS_ID=UA-XXXXX-Y
MIXPANEL_TOKEN=your_mixpanel_token

# ============================================================================
# NOTIFICATION SERVICES
# ============================================================================
# Firebase Cloud Messaging (For push notifications)
FCM_SERVER_KEY=your_fcm_server_key
FCM_SENDER_ID=your_sender_id

# OneSignal (Alternative)
ONESIGNAL_APP_ID=your_onesignal_app_id
ONESIGNAL_REST_API_KEY=your_rest_api_key

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=climatrack-backups

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_ML_PREDICTIONS=True
ENABLE_SATELLITE_DATA=True
ENABLE_WEATHER_API=True
ENABLE_EMAIL_ALERTS=True
ENABLE_SMS_ALERTS=False
ENABLE_COMMUNITY_REPORTS=True
ENABLE_HEALTH_LOGGING=True

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================
MAX_WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
WORKER_TIMEOUT=120
KEEPALIVE=5

# Database connection pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ============================================================================
# TESTING
# ============================================================================
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/climatrack_test
TEST_MODE=False