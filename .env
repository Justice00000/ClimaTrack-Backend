APP_NAME=ClimaTrack
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development  # development, staging, production

# ============================================================================
# SECURITY
# ============================================================================
# Generate a strong secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
